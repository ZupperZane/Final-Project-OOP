<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sim.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Pane fx:id="Animal_Img" onMouseClicked="#petclick" prefHeight="200.0" prefWidth="200.0">
            <children>
               <ImageView fx:id="Center_Image" fitHeight="200.0" fitWidth="200.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true" visible="false">
                  <image>
                     <Image fx:id="Image_Center_Image" url="@images/Uop.png" />
                  </image>
               </ImageView>
            </children>
         </Pane>
         <VBox fx:id="Buttons" prefHeight="200.0" prefWidth="100.0">
            <children>
               <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                 <items>
                   <AnchorPane minHeight="50.0" minWidth="80.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                         <Button fx:id="Feed" layoutX="14.0" layoutY="24.0" mnemonicParsing="false" onAction="#feedClick" text="Feed" textAlignment="CENTER" visible="false" />
                           <Label fx:id="hungerLabel" layoutX="7.0" layoutY="6.0" text="Hunger" />
                        </children>
                     </AnchorPane>
                   <AnchorPane minHeight="50.0" minWidth="80.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                           <Button fx:id="Play" layoutX="16.0" layoutY="24.0" mnemonicParsing="false" onAction="#petclick" text="Play" visible="false" />
                           <Label fx:id="happinessLabel" layoutX="9.0" layoutY="6.0" text="Happiness" />
                        </children>
                     </AnchorPane>
                 </items>
               </SplitPane>
            </children>
         </VBox>
      </children>
   </HBox>
    <Button fx:id="ButtonGen" onAction="#GenerateUopClick" text="Generate Uop" />
</VBox>
